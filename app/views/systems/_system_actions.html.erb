 <div class="btn-group-lg dropdown pull-right top-gap">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bars"></i>&nbsp<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">

    <li>
		<%= link_to content_tag(:i, "", class: "fa fa-tachometer") + ' Monitor', monitor_system_path, class: "btn-lg trigger-response-modal" %>
    <li>
	<li class="divider"></li>
    <li>
    	<%= link_to content_tag(:i, "", class: "fa fa-clock-o") + ' Update', engines_update_system_path,
			data: {confirm: "Are you sure?", confirmdetail: "Are you sure that you want to update the Engines system?" },
			class: 'btn-lg' %>
	</li>
    <li>
    	<%= link_to content_tag(:i, "", class: "fa fa-power-off") + ' Restart', restart_system_path,
			data: {confirm: "Are you sure?", confirmdetail: "Are you sure that you want to restart the Engines system?" },
			class: 'btn-lg' %>
	</li>

  </ul>
</div>


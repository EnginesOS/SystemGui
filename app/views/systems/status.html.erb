<div class="col-sm-12">
	<h2><%= content_tag(:i, "", class: "fa fa-heartbeat") %> System status</h2>
	<%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', info_system_path, class: "btn btn-warning btn-lg trigger-response-modal" %>
</div>

<div class="col-sm-12 top-gap">

	<div class='panel panel-default'>
		<div class='panel-body'>
			<% @system_status[:system].merge(@system_status[:builder]).each do |key, value| %>
				<%= render 'shared/show/label_and_text', label: key.to_s.humanize, text: SharedViews.value_as_html(value) %>
			<% end %>
		</div>
	</div>
</div>

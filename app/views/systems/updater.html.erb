<div class="col-sm-12">
	<h2><%= content_tag(:i, "", class: "fa fa-repeat") %> System update</h2>
	<%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', control_panel_path, class: "btn btn-warning btn-lg trigger-response-modal" %>
</div>

<div class="col-sm-12 top-gap">
	<div class='panel panel-default'>
		<div class='panel-body'>
			<% SystemInfo.summary.each do |key, value| %>
				<%= render 'shared/show/label_and_text', label: key.to_s.humanize, text: SharedViews.value_as_html(value) %>
			<% end %>
		</div>
	</div>
</div>

<div class="col-sm-12">
    <%= link_to 'Update Engines system', system_engines_update_path, class: "btn btn-lg btn-default",
			data: {confirm: "Are you sure?", confirmdetail: "Are you sure that you want to update the Engines system software?" } %>
    <%= link_to 'Update base system', system_base_update_path, class: "btn btn-lg btn-default",
			data: {confirm: "Are you sure?", confirmdetail: "Are you sure that you want to update the base system software?" } %>
</div>



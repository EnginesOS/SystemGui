<div class="col-sm-6 pull-right">
	<%= render 'system_actions' %>
</div>

<div class="col-sm-6">
	<h2><%= content_tag(:i, "", class: "fa fa-hdd-o") %> System</h2>
	<%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', control_panel_path, class: "btn btn-warning btn-lg trigger-response-modal" %>
</div>

<div class="col-sm-12 top-gap">
	<legend>System memory usage</legend>
	<div class="text-center">
		<%= image_tag('/charts/total_system_memory_usage') %>
	</div>
	<legend>Container memory usage</legend>
	<div class="text-center">
		<%= image_tag('/charts/total_container_memory_usage') %>
	</div>
	<legend>Applications memory usage</legend>
	<div class="text-center">
		<%= image_tag('/charts/applications_memory_usage') %>
	</div>
	<legend>Services memory usage</legend>
	<div class="text-center">
		<%= image_tag('/charts/services_memory_usage') %>
	</div>
 	<% #= (ap @system_info.memory_statistics, plain: true, index: false).html_safe %>
</div>




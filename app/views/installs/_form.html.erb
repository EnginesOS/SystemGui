<%= simple_nested_form_for(@install_form, url: installs_path, html: {class: "form-horizontal"}) do |f| %>
  <% true || if @install.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@install.errors.count, "error") %> prohibited this install from being saved:</h2>

      <ul>
      <% @install.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :gallery_server_name, value: @gallery_server_name %>
  <%= f.hidden_field :gallery_server_url, value: @gallery_server_url %>
  <%= f.hidden_field :blueprint_id, value: @blueprint_id %>

  <fieldset>
    <legend>URL</legend>
    <div class="form-group form-group-lg">
      <div class="col-sm-4">
        <%= f.label :host_name, class: "control-label" %>
        <%= f.text_field :host_name, class: "form-control", value: @default_host_name %>
      </div>
      <div class="col-sm-8">
        <%= f.label :host_domain, class: "control-label" %>
        <%= f.text_area :host_domain, class: "form-control", value: @default_host_domain %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Name</legend>
    <div class="form-group form-group-lg">
      <div class="col-sm-2">
        <%= f.label :display_name, class: "control-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :display_name, class: "form-control", value: @application_name %>
      </div>
    </div>
    <div class="form-group form-group-lg">
      <div class="col-sm-2">
        <%= f.label :display_description, class: "control-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :display_description, class: "form-control", value: @application_description %>
      </div>
    </div>
  </fieldset>


  <% if @blueprint_environment_variables.present? %>
    <fieldset>
      <legend>Environment Variables</legend>
      <% @blueprint_environment_variables.each do |ev| %>
        <div class="form-group form-group-lg">
          <div class="col-sm-2">
            <%= f.label ev["name"], class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <%= eval("f.text_field :environment_variable_" + ev["name"].underscore.gsub(/( )/, '_') + ', class: "form-control"') %>
          </div>
        </div>
      <% end %>
    </fieldset>
  <% end %>
  <fieldset>
    <legend>License</legend>
    <div class="col-sm-10 col-sm-offset-2">
      <div class="form-group form-group-lg form-text-lg">
        <%= link_to @license_name, @license_url, target: "_blank" %> 
        <span id="accept-label" class="btn btn-lg btn-default">
          <%= f.check_box :terms_and_conditions_accepted %> Accept
        </span>
      </div>
    </div>
  </fieldset>
  <div class="actions">
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary") do %>
      <%= content_tag(:i, "", class: "fa fa-plus") + " Install" %>
    <% end %>
  </div>
<% end %>

    

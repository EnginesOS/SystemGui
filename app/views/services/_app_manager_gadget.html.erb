<% state = service.state
 indicator_class = "indicator_" + state
 engine_state = "engine_" + state
%>

<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="engine-gadget service btn-group">
    <button type="button" class="btn btn-default dropdown-toggle <%= engine_state %>" data-toggle="dropdown">
      <%= content_tag(:i, "", class: "fa fa-circle indicator " + indicator_class) %> <label><%= service.engine_name %></label>
    </button>
    <ul class="dropdown-menu engine-gadget-dropdown-menu" role="menu">
    	<li><div class="dropdown-title" %><%= service.engine_name %></div></li>
  		<% if state == "running"&& service.engine_name != 'mgmt'  #FIXME use flag instead %>
  			<li><div class="<%= indicator_class %> dropdown-title"><%= content_tag(:i, "", class: "fa fa-circle-o-notch fa-spin") %> Running</div></li>
  			<% if service.engine_name != 'mgmt'  #FIXME use flag instead %>
          <li><%= link_to content_tag(:i, "", class: "fa fa-stop") + " Stop", stop_service_path(service.engine_name) %></li>
          <li><%= link_to content_tag(:i, "", class: "fa fa-pause") + " Pause", pause_service_path(service.engine_name) %></li>
        <% end %>
  		<% elsif state == "paused" %>
  			<li><div class="<%= indicator_class %> dropdown-title"><%= content_tag(:i, "", class: "fa fa-circle-o-notch") %> Paused</div></li>
  		  <li><%= link_to content_tag(:i, "", class: "fa fa-pause") + " Unpause", unpause_service_path(service.engine_name) %></li>
  		<% elsif state == "stopped" %>
  			<li><div class="<%= indicator_class %> dropdown-title"><%= content_tag(:i, "", class: "fa fa-circle-o-notch") %> Stopped</div></li>
  		  <li><%= link_to content_tag(:i, "", class: "fa fa-play") + " Start", start_service_path(service.engine_name) %></li>
  		  <li class="divider"></li>
  		  <li><%= link_to content_tag(:i, "", class: "fa fa-wrench") + " Rebuild", recreate_service_path(service.engine_name) %> </li>
  		<% elsif  state == "nocontainer" %>   
        <li><div class="<%= indicator_class %> dropdown-title"><%= content_tag(:i, "", class: "fa fa-circle-o") %> Unbuilt</div></li>
  			<li><%= link_to content_tag(:i, "", class: "fa fa-wrench") + " Build", create_container_service_path(service.engine_name) %></li> 
      <% else %>
         <li>no state</li>
      <%  end %>
  		<li class="divider"></li>
    	<li><%= link_to content_tag(:i, "", class: "fa fa-info") + " Advanced", "#", data: {toggle: "modal", target: "#modal_" + service.engine_name, container: service.engine_name, controller: "services" }, role: "button", class: "advanced_menu_item" %>
  		</li>
  		<li class="divider"></li>
     	<li><%= link_to content_tag(:i, "", class: "fa fa-globe") + " " + service.fqdn, "http://" + service.fqdn, target: "_blank"%></li>
    </ul>
  </div>
</div>

<div class="modal fade" id="modal_<%= service.engine_name %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"><%= content_tag(:i, "", class: "fa fa-info") %> Advanced</h4>
      </div>
      <div class="modal-body" id="modal_<%= service.engine_name %>_body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


     


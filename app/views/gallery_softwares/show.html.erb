<% if @paginated_softwares.softwares.present? %>

	<% @paginated_softwares.softwares.each do |software|  %>
	
		<% software_id = software[:id]
		  gallery_title = software[:title]
		  gallery_detail = software[:detail]
		  home_page = software[:website_from_blueprint]
		  image_url =
		  if software[:icon_url_from_gallery].present?
		    software[:icon_url_from_gallery]
		  else
		    software[:icon_url_from_blueprint]
		  end
		
		  install_url = new_install_from_blueprint_path(
		  						install_from_blueprint: {
									repository_url: software[:repository_url],
									installer_icon_url: image_url },
								software_title: software[:title], 
		  						tags: params[:tags],
								search: params[:search],
								page: params[:page]) 
		%>

			<div class="col-md-3 install-software-panel">
		    	<a href="<%= install_url %>" class="btn btn-default btn-noborder btn-lg trigger-response-modal" title="Install <%= gallery_title %>">
				    <div class="engine-install-icon-area">
				        <div class="helper-to-vertical-align-middle"></div><img src="<%= image_url %>" class="engine-install-icon" alt="">
				    </div>
				    <% if gallery_title.present? %>
				        <div class="engine-install-name"><%= gallery_title %></div>
				    <% end %>
				    <% if gallery_detail.present? %>
				        <div class="engine-install-detail"><%= gallery_detail %></div>
				    <% end %>
		    	</a>
			</div>
	<%end%>

	<div class="col-sm-12">
	  <%= paginate @paginated_softwares, theme: 'twitter-bootstrap-3', params: {controller: "installers", action: "show"} %>
	</div>
	
<% else %>
	<div class="col-sm-12">
		None
	</div>
<%end%>

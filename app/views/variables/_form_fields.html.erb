<% if f.object.variables.present? %>
	<% legend_class = f.object.variables.select {|v| v.mandatory }.empty? ? "advanced_fields" : "" %>
	<div class="<%= legend_class %>"><legend>Variables</legend></div>
  	<%= f.fields_for :variables do |ff| %>
    	<%= render partial: 'variables/form_field', locals: {f: ff} %>
  	<% end %>
<% end %>

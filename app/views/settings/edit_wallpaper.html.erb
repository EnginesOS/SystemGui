<div class="col-sm-12 top-gap">
  <h3 class="control-panel-title"><i class="fa fa-picture-o"></i> Wallpaper</h3>

    <%= form_for @settings, html: {class: "form-horizontal"} do |f| %>


    <fieldset>
    <legend>Wallpaper</legend>
      <div class="form-group form-group-lg">
        <div class="col-sm-2">
          <div class='form-image-control'>
            <div class='form-image-centering'>
              <% if f.object.wallpaper.exists? %>
                <%= image_tag(f.object.wallpaper.url, class: 'form-engine-icon') %><br>
                <%= f.check_box :delete_wallpaper %> <%= f.label 'Remove wallpaper' %>
              <% else %>
                <%= image_tag("_placeholder_for_missing_engine.jpg", class: "launcher-icon") %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-sm-10">
          <%= f.file_field :wallpaper, class: 'form-control input-lg choose_file_form_control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
    <legend>Background</legend>
      <%= render partial: 'shared/form/text_field', locals: {name: :background_color, label: 'Color', f: f} %>
    </fieldset>

    <div class="actions top-gap">
      <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), settings_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
      <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
        <%= content_tag(:i, "", class: "fa fa-check") + " Save" %>
      <% end %>
    </div>

  <% end %>

</div>
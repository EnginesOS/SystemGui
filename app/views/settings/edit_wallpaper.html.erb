<div class="col-sm-12">
  <h2><i class="fa fa-picture-o"></i> Wallpaper</h2>
  <%= form_for @settings do |f| %>
    <%= render partial: 'shared/form/errors', locals: {f: f} %>
    <legend>Wallpaper</legend>
    <%= render partial: 'shared/form/image_field', locals: {name: :wallpaper, label: false, tooltip: "Change wallpaper.", f: f} %>
    <legend>Background</legend>
    <%= render partial: 'shared/form/text_field', locals: {name: :background_color, label: 'Color', f: f} %>
    <%= render partial: 'shared/form/cancel_and_submit_buttons', locals: {f: f, cancel_path: settings_path} %>
  <% end %>
</div>
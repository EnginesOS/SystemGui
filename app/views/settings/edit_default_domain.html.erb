<div class="col-sm-12 top-gap">
  <h3 class="control-panel-title"><i class="fa fa-bolt"></i> Default domain</h3>

  <%= form_for @settings, html: {class: "form-horizontal"} do |f| %>
    <%= render partial: 'shared/form/errors', locals: {f: f} %>
    <%= render partial: 'shared/form/select', locals: {name: :default_domain, label: false, f: f, collection: Domain.all.map(&:domain_name)} %>
    <%= render partial: 'shared/form/cancel_and_submit_buttons', locals: {f: f, cancel_path: galleries_path} %>
  <% end %>

</div>
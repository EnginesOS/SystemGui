<div class="btn-group-lg dropdown pull-right top-gap">
	<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
		<i class="fa fa-wrench"></i>&nbsp<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">

		<li>
			<%= link_to content_tag(:i, "", class: "fa fa-plus") + " Add", new_domain_path, class: "btn-lg trigger-response-modal" %>
		</li>
		<li class="divider"></li>
		<li>
			<% detail = '<span class="settings_btn_detail">'.html_safe + @settings.default_domain.to_s + '</span>'.html_safe %>
			<% link_body = (content_tag(:i, '', class: 'fa fa-bolt') + ' Default domain'.html_safe) + "
			<br>
			".html_safe + detail.html_safe  %>
			<%= link_to link_body, domains_edit_default_domain_path, class: 'btn-lg trigger-response-modal' %>
		</li>
		<li>
			<% detail = '<span class="settings_btn_detail">'.html_safe + @settings.default_site.to_s + '</span>'.html_safe %>
			<% link_body = (content_tag(:i, '', class: 'fa fa-home') + ' Default website'.html_safe) + "
			<br>
			".html_safe + detail.html_safe  %>
			<%= link_to link_body, domains_edit_default_website_path, class: 'btn-lg trigger-response-modal' %>
		</li>

	</ul>
</div>

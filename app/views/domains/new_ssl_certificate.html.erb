<div class="col-sm-12 top-gap">
  <h3 class="control-panel-title"><i class="fa fa-certificate"></i> Create SSL certificate</h3>
  <h4 class="control-panel-title"><%= @domain.domain_name %></h4>

  <%= form_for @domain, url: create_domain_ssl_certificate_path do |f| %>
      <%= (f.hidden_field :domain_name, value: f.object.domain_name) %>
      <%= render partial: 'shared/form/field', locals: {field_name: :person_name, f: f} %>
      <%= render partial: 'shared/form/field', locals: {field_name: :organization_name, f: f} %>
      <%= render partial: 'shared/form/field', locals: {field_name: :city, f: f} %>
      <%= render partial: 'shared/form/field', locals: {field_name: :state, f: f} %>
      <%= f.hidden_field :domain_name %>
      <%= render partial: 'shared/form/country_select', locals: {field_name: :country, f: f} %>

      <div class="actions top-gap">
        <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), domains_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
        <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
          <%= content_tag(:i, "", class: "fa fa-check") + " Create certificate" %>
        <% end %>
      </div>
  <% end %>
</div>



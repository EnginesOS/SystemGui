<div class="col-sm-12">
  <h2><i class="fa fa-home"></i> Default website</h2>
  <%= form_for @settings, url: domains_update_network_settings_path do |f| %>
    <%= render partial: 'shared/form/errors', locals: {f: f} %>
    <%= render partial: 'shared/form/text_field', locals: {name: :default_site, label: "URL", f: f} %>
    <%= render partial: 'shared/form/cancel_and_submit_buttons', locals: {f: f, cancel_path: domains_path} %>
  <% end %>
</div>
<div class='row'>

	<div class="col-sm-6">
		<h2><i class="fa fa-globe"></i> Domains</h2>
	</div>
	<div class="col-sm-6">
		<%= render 'actions' %>
	</div>
</div>

<div class='row'>

	<div class="col-sm-12">

		<div class="btn-group">
			<%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', control_panel_path, class: "btn btn-warning btn-lg trigger-response-modal" %>
		</div>

		<% if @domains.present? %>
		<% @domains.each do |domain| %>
		<%= render partial: "show", locals: { domain: domain } %>
		<% end %>
		<% else %>
		<p class='top-gap'>
			No hosted domains.
		</p>
		<% end %>

	</div>

</div>

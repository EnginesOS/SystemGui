<div class="col-sm-12 top-gap backup-tasks">

  <h3 class="control-panel-title"><%= content_tag(:i, "", class: "fa fa-upload") %> New Backup Task</h3>
  <h3 class="control-panel-title"><%= @backup_task.engine_name %></h3>
<%= @backup_task.backup_type %>
  <h4><%= "Source: " + @backup_task.source_name + "(" + @backup_task.backup_type_in_words.to_s + ")" %></h4>

  <%= form_for @backup_task, html: {class: "form-horizontal"} do |f| %>

    <%= f.input :source_name, as: :hidden %>
    <%= f.input :backup_type, as: :hidden %>
    <%= f.input :engine_name, as: :hidden %>

    <%= render partial: 'shared/form/field', locals: {field_name: :backup_name, f: f} %>

    <fieldset>
      <legend>Destination</legend>
        <%= render partial: 'shared/form/field', locals: {field_name: :folder, f: f} %>
        <%= render partial: 'shared/form/select', locals: {field_name: :protocol, select_collection: ["ftp", "s3", "smbfs", "nfs", "local"], f: f} %>
      <div id="backup-task-external-destination-details">
        <%= render partial: 'shared/form/field', locals: {field_name: :address, f: f} %>
        <%= render partial: 'shared/form/field', locals: {field_name: :username, f: f} %>
        <%= render partial: 'shared/form/field', locals: {field_name: :password, f: f} %>
      </div>
    </fieldset>

    <div class="actions top-gap">
      <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), backup_tasks_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
      <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
        <%= content_tag(:i, "", class: "fa fa-check") + " Save" %>
      <% end %>
    </div>

  <% end %>

</div>
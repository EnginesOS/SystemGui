<div class="software_installation_form">

	<div class="col-sm-12">
		<h2><%= content_tag(:i, "", class: "fa fa-arrow-circle-right") %> Install <%= @application_installation.title %></h2>
		<div class="col-sm-2 top-gap">
			<%= render 'shared/form/image', url: @application_installation.icon_url %>
		</div>
		<div class="col-sm-8 top-gap">
			<%= @application_installation.description %>
		</div>


	<div class="btn-group-vertical top-gap pull-right">
		<button type="button" class="btn btn-default btn-lg" id="show_advanced_fields_button">
			<%= content_tag(:i, '', class: 'fa fa-terminal') %> Advanced
		</button>
        <a class="btn btn-default btn-lg" data-toggle="modal" data-target="#blueprint_modal">
          <i class="fa fa-file-text"></i> Blueprint
        </a>
	</div>





	</div>

	<div class="col-sm-12">

		<%= form_for @application_installation, url: application_installation_path do |f| %>
			<%= f.hidden_field :gallery_url %>
			<%= f.hidden_field :gallery_software_id %>

			<%= render 'shared/form/errors', f: f %>
			<%= render 'application_fields', f: f %>
			<!-- < %= render 'displays/form_fields', f: f %> -->
			
			
		    <legend>License</legend>
			<% license_title = f.object.license_label %>
			<%= render 'shared/form/link', link_text: f.object.license_label, label_text: false, url: f.object.license_sourceurl, target: f.object.browser_target %>
			<%= render 'shared/form/checkbox', name: :license_terms_and_conditions, label: 'Accept', f: f %>
			<%= render 'shared/form/cancel_and_submit_buttons', f: f, cancel_path: installer_path, submit_label: 'Install', submitted_message: "Installing..." %>
			<%#= f.fields_for :display do |ff| %>
			<%#= ff.hidden_field :display_name %>
	 	<% end %>

	</div>
</div>

<div class="modal fade advanced_detail" id="blueprint_modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title"><i class="fa fa-file-text"></i> Blueprint for <%= @application_installation.title %></h4>
			</div>
			<div class="modal-body">
				<%= (ap @application_installation.blueprint, plain: true, index: false).html_safe %>
			</div>
		</div>
	</div>
</div>


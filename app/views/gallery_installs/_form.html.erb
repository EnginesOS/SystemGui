<%= simple_form_for @gallery, html: {class: "form-horizontal"} do |f| %>

  <div class='form-group form-group-lg'>
    <div class="col-sm-2">
      <%= f.label :url, 'URL', class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <div class='form-group form-group-lg'>
    <div class="col-sm-2">
      <%= f.label :name, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="actions top-gap">
    <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), gallery_installs_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
      <%= content_tag(:i, "", class: "fa fa-check") + " Save" %>
    <% end %>
  </div>


<% end %>
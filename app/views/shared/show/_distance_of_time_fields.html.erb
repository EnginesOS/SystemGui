<% if fields.kind_of?(Array) %>
  <% fields.each do |field| %>
    <% text = (distance_of_time_in_words object.send(field), DateTime.now) + ' ago'
       label = field.to_s.humanize.capitalize %> 
    <%= render partial: 'shared/show/label_and_text', locals: {label: label, text: text} %>
  <% end %>
<% else %>
  <% text = (distance_of_time_in_words object.send(fields), DateTime.now) + ' ago'
     label = fields.to_s.humanize.capitalize %> 
  <%= render partial: 'shared/show/label_and_text', locals: {label: label, text: text} %>
<% end %>
<div class="fields">
  <div class="form-group form-group-lg">
    <div class="col-sm-2">
      <% a = "f.label :#{field[:name]}, '#{(field[:label] || field[:name].to_s.humanize.capitalize)}', class: 'control-label'" %>
      <%= eval a %>
    </div>
    <div class="col-sm-10">
      <% if field[:collection] %>
        <%= eval "f.select :#{field[:name]}, #{field[:collection]}, {}, {class: 'form-control'}" %>
      <% else %>
        <%= eval "f.text_field :#{field[:name]}, class: 'form-control'" %>
      <% end %>
    </div>
  </div>
</div>
<div class="form-group form-group-lg">
  <div class="col-sm-2">
    <% a = "f.label :#{field[:name]}, '#{(field[:label] || field[:name].to_s.humanize.capitalize)}', class: 'control-label'" %>
    <%= eval a %>
  </div>
  <div class="col-sm-10">
    <%= eval "f.input :#{field[:name]}, label: false, collection: #{(field[:collection] || false)}, class: 'form-control'" %>
  </div>
</div>
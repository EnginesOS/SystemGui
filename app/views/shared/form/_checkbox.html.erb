<%  label ||= name.to_s.humanize.capitalize
    tooltip ||= nil 
    value ||= f.object.send(name); value = true if [1, "1", "true", "yes", "Y"].include?(value)
    hint ||= nil
    comment ||= nil
    errors ||= f.object.errors[name]
    errors_class = "field_with_errors" if errors.present? %>

<div class="<%= errors_class %> col-sm-8 col-sm-offset-2">
  <div class="form-group">
    <%= f.check_box(name, checked: value, title: tooltip) + ' ' + f.label(name, label, class: 'label-lg', title: tooltip) %> <%= comment %><br>
    <% if errors.present? %>
      <div class='form-field-errors'>
        <% errors.each do |error| %>
          <%if error.class == Array %>
            <%= error[1] %>
          <% else %>
            <%= error %>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <div class='form-field-hint'>
      <%= hint %>
    </div>
  </div>
</div>

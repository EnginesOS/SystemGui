<%  label = label.nil? ? name.to_s.humanize.capitalize : label
    value ||= f.object.send(name); value = nil if value.blank?
    select_collection ||= (collection || [] )
    id ||= ''
    attach_selectize ||= false
    tooltip ||= nil
    hint ||= nil
    placeholder ||= nil
    comment ||= nil
    include_blank ||= value.nil?
    errors ||= f.object.errors[name]
    errors_class = "field_with_errors" if errors.present?

%>
select_collection
<%= select_collection.class %><%= select_collection %>
<%    
    collection_as_array = select_collection.class != Array ? JSON.parse(select_collection) : select_collection
    select_class ||= ""

    if attach_selectize
      select_class += ' selectize-single'
    else
      select_class += ' form-control input-lg'
    end %>

<div class="<%= errors_class %> col-sm-8 col-sm-offset-2">
  <div class="form-group">
    <% if label.present? %>
	    <%= f.label name, class: 'control-label' do %>
	      <%= label %>
	    <% end %>
    <% end %>
    <%= comment %>
    <%= f.select name, collection_as_array, {selected: value, include_blank: include_blank}, {title: tooltip, placeholder: placeholder, class: select_class, id: id} %>
    <% if errors.present? %>
      <div class='form-field-errors'>
        <% errors.each do |error| %>
          <%if error.class == Array %>
            <%= error[1] %>
          <% else %>
            <%= error %>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <% if hint.present? %>
      <div class='form-field-hint'>
        <%= hint %>
      </div>
    <% end %>
  </div>
</div>






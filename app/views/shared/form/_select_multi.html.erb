<%  label = label.nil? ? name.to_s.humanize.capitalize : label
    value ||= f.object.send(name); value = nil if value.blank?
     %>

<div class="col-sm-8  col-sm-offset-2">
  <div class="form-group">
    <% if label.present? %>
	    <%= f.label name, class: 'control-label' do %>
	      <%= label %>
	    <% end %>
    <% end %>
    Multi-select not working.
    <%= f.select name, collection, {selected: value, include_blank: value.nil?, input_html: {class: "input-lg"}}, class: 'selectize-single' %>
  </div>
</div>

<% form_object = f.object
   label ||= form_object.class.to_s.humanize.downcase
   verb ||= :saved %>


<div class="row">
	
	<% if form_object.respond_to?(:engines_api_error) %>
		<% if form_object.engines_api_error.present? %>
		  <div class="col-sm-8 col-sm-offset-2 form_errors">
			<div class="alert alert-warning alert-dismissible">
	      		<button type="button" class="close" data-dismiss="alert"><span>×</span></button>
	      		<div class="first_run_error_message"><%= form_object.engines_api_error %></div>
		    </div>
		  </div>
		<% end %>
	<% end %>
	
	<% if form_object.errors.any? %>
	  <div class="col-sm-8 col-sm-offset-2 form_errors">
		<div class="alert alert-warning alert-dismissible">
      		<button type="button" class="close" data-dismiss="alert"><span>×</span></button>
      		<div class="first_run_error_message">
		      <strong><%= pluralize(form_object.errors.count, "error") %> prohibited the <%= label %> from being <%= verb %>:</strong>
		      <ul>
		      <% form_object.errors.each do |attribute, error| %>
		        <li>
		          <%if error.class == Array %>
		            <%= error.join(' ') %>
		          <% else %>
		            <%= [attribute.to_s.humanize, error].join(' ') %>
		          <% end %>
		        </li>
		      <% end %>
		      </ul>
      		</div>
	    </div>
	  </div>
	<% end %>

</div>

<div id="flash_message_template" style="display: none;">
	<div class="alert">
	  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	  <div class="message_body" %></div>
	</div>
</div>

<div id="flash_message_display_area"></div>

<% flash.each do |name, msg| %>
  <% if msg.present? %>
  	 <% next unless msg.is_a?(String) %>
	 <%= content_tag :div, nil, class:"flash_message_data", data: {alertclass: name.to_s == 'notice' ? 'success' : 'danger', messagebody: msg.to_s} %>
  <% end %>
<% end %>

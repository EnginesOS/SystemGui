<% if params[:controller] == "installs" && params[:action] == "installing" %>

	<div id="installation_result_notifier" class="alert" style="display: none;" >
	  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	  <div id="installation_result_notifier_message" %></div>
	</div>
	
<% else %>

	<% flash.each do |name, msg| %>
	  <% if msg.is_a?(String) %>
	    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
	      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	      <%= content_tag :div, msg, :id => "flash_#{name}" %>
	    </div>
	  <% end %>
	<% end %>
	
<% end %>

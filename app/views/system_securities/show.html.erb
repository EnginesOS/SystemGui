<div class="col-sm-12">
	<h2><%= content_tag(:i, "", class: "fa fa-user-secret") %> Security</h2>
	<%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', system_path, class: "btn btn-warning btn-lg trigger-response-modal" %>
</div>

<div class="col-sm-12 top-gap">
	<div class="btn-toolbar">
		<div class="btn-group">
			<div class="dropdown">
			  <button class="btn btn-lg btn-default dropdown-toggle" type="button" data-toggle="dropdown">
			    <%= content_tag(:i, "", class: "fa fa-key") + ' Access key' %>
			    <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu">
			    <li><%= link_to content_tag(:i, "", class: "fa fa-upload") + ' Upload', new_system_security_key_path, class: "btn-lg trigger-response-modal" %></li>
			    <li><%= link_to content_tag(:i, "", class: "fa fa-download") + ' Download', download_system_security_key_path, class: "btn-lg" %></li>
			  </ul>
			</div>
		</div>
		<div class="btn-group">
			<div class="dropdown">
			  <button class="btn btn-lg btn-default dropdown-toggle" type="button" data-toggle="dropdown">
			    <%= content_tag(:i, "", class: "fa fa-certificate") + ' Certificate' %>
			    <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu">
			    <li><%= link_to content_tag(:i, "", class: "fa fa-upload") + ' Upload', new_system_security_certificate_path, class: "btn-lg trigger-response-modal" %></li>
			    <li><%= link_to content_tag(:i, "", class: "fa fa-download") + ' Download', download_system_security_certificate_path, class: "btn-lg" %></li>
			  </ul>
			</div>
		</div>
		<div class="btn-group">
	    	<%= link_to content_tag(:i, "", class: "fa fa-user") + ' Admin user', user_path, class: "btn btn-default btn-lg trigger-response-modal" %>
		</div>
	</div>
</div>

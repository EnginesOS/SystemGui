<%= simple_nested_form_for(@software, url: update_runtime_properties_software_path(@software), method: :patch, html: {class: "form-horizontal"}) do |f| %>
  <% true || if @software.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@software.errors.count, "error") %> prohibited this install from being saved:</h2>

      <ul>
      <% @install.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :engine_name %>
  <% #= f.hidden_field :created_from_existing_engine %>

  <fieldset>
    <legend>Resources</legend>
    <%= render partial: 'shared/form/field', locals: {field_name: :memory, f: f} %>
  </fieldset>

  <% environment_variables = f.object.software_environment_variables %>
  <% if environment_variables.present? %>
    <fieldset>
      <legend>Environment variables</legend>
      <%= f.fields_for :software_environment_variables do |ev| %>
        <%= render partial: 'environment_variable_fields', locals: {ev: ev} %>
      <% end %>
    </fieldset>
  <% end %>

  <div class="actions top-gap">
    <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), control_panel_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
      <%= content_tag(:i, "", class: "fa fa-check") + " Save" %>
    <% end %>
  </div>

<% end %>

    


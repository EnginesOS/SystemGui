<%= simple_nested_form_for(@software, url: update_software_runtime_properties_path(id: @software.engine_name), method: :patch, html: {class: "form-horizontal"}) do |f| %>
  <% true || if @software.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@software.errors.count, "error") %> prohibited this install from being saved:</h2>

      <ul>
      <% @install.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :engine_name %>
  <% #= f.hidden_field :created_from_existing_engine %>

  <fieldset>
    <legend>Resources</legend>
    <%= render partial: 'shared/gadgets/form_field_inline', locals: {field: {name: :memory}, f: f} %>
  </fieldset>

  <% if @software.software_env_variables.present? %>
    <fieldset>
      <legend>Environment variables</legend>
      <%= f.fields_for :softwares_env_variables do |ev| %>
        <div class="form-group form-group-lg">
          <div class="col-sm-2">
            <label class="text optional control-label"><%= ev.object.name.to_s.humanize %></label>
          </div>
          <div class="col-sm-10">
            <% tooltip = (ev.object.comment || ev.object.name.to_s.humanize) %>
            <%= ev.text_field :value, class: "form-control", data: {toggle: "tooltip"}, title: tooltip %>
            <%= ev.hidden_field :name %>
          </div>
        </div>
      <% end %>
    </fieldset>
  <% end %>

  <div class="actions top-gap">
    <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), control_panel_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
      <%= content_tag(:i, "", class: "fa fa-check") + " Save" %>
    <% end %>
  </div>

<% #= f.object.app.software.inspect %>
<% #= f.object.icon.url %>

<% end %>

    


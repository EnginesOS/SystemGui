<div class="col-sm-12 top-gap">
  <h3 class="control-panel-title"><i class="fa fa-certificate"></i> Create SSL certificate</h3>
  <h4 class="control-panel-title"><%= @hosted_domain.domain_name %></h4>

  <%= simple_form_for @hosted_domain, url: create_hosted_domain_ssl_certificate_path, html: {class: "form-horizontal"} do |f| %>
    <fieldset>
      <%= (f.hidden_field :domain_name, value: f.object.domain_name) %>
      <%= render partial: 'shared/gadgets/form_field_inline', locals: {field: {name: :person_name}, f: f} %>
      <%= render partial: 'shared/gadgets/form_field_inline', locals: {field: {name: :organization_name}, f: f} %>
      <%= render partial: 'shared/gadgets/form_field_inline', locals: {field: {name: :city}, f: f} %>
      <%= render partial: 'shared/gadgets/form_field_inline', locals: {field: {name: :state}, f: f} %>
      <div class="fields">
        <div class="form-group form-group-lg">
          <div class="col-sm-2">
            <label class="control-label" for="hosted_domain_country">Country</label>
          </div>
          <div class="col-sm-10">
            <%= f.country_code_select :country, nil, {include_blank: true}, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="actions top-gap">
        <%= link_to((content_tag(:i, "", class: "fa fa-times") + " Cancel"), hosted_domains_path, class: "btn btn-lg btn-warning trigger-response-modal") %>
        <%= button_tag(type: "submit", class: "btn btn-lg btn-primary trigger-response-modal pull-right") do %>
          <%= content_tag(:i, "", class: "fa fa-check") + " Create certificate" %>
        <% end %>
      </div>
    </fieldset>
  <% end %>
</div>



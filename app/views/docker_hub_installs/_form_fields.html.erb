<%= f.fields_for :docker_hub_install do |ff| %>

<%= ff.hidden_field :scroll_form_to %>
<%= ff.hidden_field :new_attached_service_publisher_namespace %>
<%= ff.hidden_field :new_attached_service_type_path %>
<%= ff.hidden_field :new_eport %>

<%= render 'shared/form/legend', text: 'Source' %>
<%= render 'shared/form/text_field', f: ff, name: :docker_image, label: 'Docker Hub image' %>
<%= render 'shared/form/legend', text: 'Deploy' %>
<%= render 'shared/form/radio_buttons', f: ff, name: :type, select_collection: ['Software', 'Service'], default_value: "Software" %>
<%= render 'shared/form/text_field', f: ff, name: :host_name %>
<%= render 'shared/form/number_field', f: ff, name: :web_port %>
<%= render 'shared/form/text_field', f: ff, name: :user_id %>

<% end %>

<%= render 'shared/form/legend', text: 'Attach services' %>
<%= render 'attached_services', f: f %>

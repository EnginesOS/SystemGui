<%= f.fields_for :docker_hub_install do |ff| %>

	<%= render 'shared/form/legend', text: 'Type' %>
	<%= render 'shared/form/radio_buttons', f: ff, name: :type, label: false, select_collection: ['Software', 'Service'] %>
	<%= render 'shared/form/legend', text: 'Run' %>
	<%= render 'shared/form/text_field', f: ff, name: :run_as_user, label: "User", hint: "valid username or userid within container" %>
	<%= render 'shared/form/text_field', f: ff, name: :run_command, label: "Command", hint: "leave blank to self-start" %>
	<%= render 'environment_variables', f: ff %>

<% end %>

<%= render 'shared/form/legend', text: 'Attach services' %>
<%= render 'attached_services', f: f %>


<span class='app-manager'>
  <div class="col-sm-12">
    <h3 class="control-panel-heading"><%= content_tag(:i, "", class: "fa fa-tablet") %> Apps</h3>
  </div>

  <% if @apps %>
      <% @apps.each do |app| %>
          <%= render partial: "apps/app_manager_gadget", locals: {app: app} %>
      <% end %>
  <% else %>
      <p>No applications installed.</p>
  <% end %>

  <div class="col-sm-12">
    <h3 class="control-panel-heading"><%= content_tag(:i, "", class: "fa fa-hdd-o") %> Services</h3>
  </div>

  <% @services.each do |service| %>
    <%= render partial: "services/app_manager_gadget", locals: {service: service} %>
  <% end %>

</span>

<%= render partial: 'shared/gadgets/waiting_for_response' %>

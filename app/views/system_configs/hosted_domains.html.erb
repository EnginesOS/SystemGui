<span class='settings'>
  <div class="col-sm-12 top-gap">
    <h3 class="control-panel-title"><i class="fa fa-globe"></i> Domain hosting</h3>
    <%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', settings_path, class: "btn btn-warning btn-lg trigger-response-modal" %>

    <div><%= @system_config.inspect %></div>


  </div>



  <div class="col-sm-12">
    <div class='btn-group-vertical top-gap'>

      <% detail = '<span class="system_config_btn_detail">'.html_safe + @system_config.default_domain + '</span>'.html_safe %>
      <% link_body = (content_tag(:i, '', class: 'fa fa-bolt') + ' Default domain'.html_safe) + "<br>".html_safe + detail.html_safe  %>
      <%= link_to link_body, edit_default_domain_path, class: 'btn btn-default btn-lg trigger-response-modal' %>

      <% detail = '<span class="system_config_btn_detail">'.html_safe + @system_config.default_site + '</span>'.html_safe %>
      <% link_body = (content_tag(:i, '', class: 'fa fa-home') + ' Default site'.html_safe) + "<br>".html_safe + detail.html_safe  %>
      <%= link_to link_body, edit_default_website_path, class: 'btn btn-default btn-lg trigger-response-modal' %>


    </div>
  </div>
</span>


<span class="galleries settings">
  <div class="col-sm-12 top-gap">
    <h3 class="control-panel-title"><%= content_tag(:i, "", class: "fa fa-th") %> Galleries</h3>
    <%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', settings_path, class: "btn btn-warning btn-lg trigger-response-modal" %>

    <% if @galleries %>
        <% @galleries.each do |gallery| %>
            <%= render partial: "show", locals: { gallery: gallery } %>
        <% end %>
    <% else %>
        <p>No galleries.</p>
    <% end %>

    <div class="btn-group">
      <% #= link_to content_tag(:i, "", class: "fa fa-list") + " Add from list", "#", data: {toggle: "modal", target: "#modal_add_gallery"}, role: "button", class: "btn btn-default" %>
      <%= link_to content_tag(:i, "", class: "fa fa-plus") + " Add", new_gallery_install_path, class: "btn btn-primary btn-lg top-gap trigger-response-modal" %>
    </div>
  </div>
</span>
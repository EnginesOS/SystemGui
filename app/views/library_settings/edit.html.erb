<div class="col-sm-12">
  <h2><i class="fa fa-th-list"></i> Default library</h2>
  <%= form_for @library_settings, url: library_settings_path() do |f| %>
    <%= render partial: 'shared/form/errors', locals: {f: f} %>
    <% collection =  Library.all.collect {  |g| [ g.id, g.name ] } %> 
    <%= render partial: 'shared/form/select', locals: {name: :default_library_id, label: "Default library", f: f, collection: collection} %>
    <%= render partial: 'shared/form/cancel_and_submit_buttons', locals: {f: f, cancel_path: libraries_path} %>
  <% end %>
</div>

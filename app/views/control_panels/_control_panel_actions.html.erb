 <div class="btn-group dropdown pull-right top-gap">
  <button type="button" class="btn btn-lg btn-primary dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bars"></i>&nbsp<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">

	        <li>
	          <%= link_to content_tag(:i, "", class: "fa fa-plus") + " Installer", installer_path, class: 'btn-lg trigger-response-modal' %>
	        </li>
	        <li class="divider"></li>
        	<li>
			  <% link_body = (content_tag(:i, '', class: 'fa fa-globe') + ' Domains'.html_safe) %>
			  <%= link_to link_body, domains_path, class: 'btn-lg trigger-response-modal' %>
	        </li>
	        <li class="divider"></li>
	        <li>
              <%= link_to (content_tag(:i, nil,class: "fa fa-arrows") + " Services registry"), services_registry_path, class: 'btn-lg trigger-response-modal' %>
	        </li>
            <li class="divider"></li>
      	    <li>
			  <a href=<%= edit_desktop_settings_path %> class="btn-lg trigger-response-modal">
			    <i class="fa fa-desktop"></i> Desktop settings
			  </a>
			</li>
            <li class="divider"></li>
	        <li>
	          <%= link_to content_tag(:i, "", class: "fa fa-dashboard") + " System stats", system_path, class: 'btn-lg trigger-response-modal' %>
	        </li>
      	    <li>
      	    	<%= link_to content_tag(:i, "", class: "fa fa-clock-o") + ' Update system', engines_update_system_path,
					data: {confirm: "Are you sure?", confirmdetail: "Are you sure that you want to update the Engines system?" },
					class: 'btn-lg' %>
			</li>
      	    <li>
      	    	<%= link_to content_tag(:i, "", class: "fa fa-power-off") + ' Restart system', restart_system_path,
					data: {confirm: "Are you sure?", confirmdetail: "Are you sure that you want to restart the Engines system?" },
					class: 'btn-lg' %>
			</li>

  </ul>
</div>


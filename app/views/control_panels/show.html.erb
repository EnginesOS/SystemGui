<div class='control_panel'>
	<div class='row'>
		<div class="col-sm-6">
			<h2><%= content_tag(:i, "", class: "fa fa-tablet") %> Applications</h2>
		</div>
		<div class="col-sm-6">
			<%= render 'control_panel_actions' %>
		</div>
	</div>
	
	<div class='row'>
		<% if @applications.present? %>
			<% @applications.each do |application| %>
				<div class="application control_panel_object", id="<%= application.container_name %>", data-url="<%= control_panel_applications_path(application_name: application.container_name) %>">
					<div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
  						<div class="control_panel_object_placeholder">
  							<%= application.container_name %><br>
							<%= content_tag(:i, nil, class: "fa fa-spinner fa-spin") %>
						</div>
					</div>
				</div>
				<div class="placeholder_html" style="display: none;"></div>
				<div class="last_update_html" style="display: none;"></div>
				<div class="this_update_html" style="display: none;"></div>
			<% end %>
		<% else %>
			<div class="col-sm-12">
				No software is installed.<br><small>Click on the blue menu button to open the installer.</small>
			</div>
		<% end %>
	</div>
	
	<div class='row'>
		<div class="col-sm-12">
			<h2><%= content_tag(:i, "", class: "fa fa-hdd-o") %> Services</h2>
		</div>
	</div>
	
	<div class='row'>
		<% if @services.present? %>
			<% @services.each do |service| %>

				<div class="service control_panel_object", id="<%= service.container_name %>", data-url="<%= control_panel_services_path(service_name: service.container_name) %>">
					<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  						<div class="control_panel_object_placeholder">
  							<%= service.container_name %><br>
							<%= content_tag(:i, nil, class: "fa fa-spinner fa-spin") %>
						</div>
					</div>
				</div>
				<div class="placeholder_html" style="display: none;"></div>
				<div class="last_update_html" style="display: none;"></div>
				<div class="this_poll_html" style="display: none;"></div>
				<% end %>
		<% end %>
	</div>
</div>	



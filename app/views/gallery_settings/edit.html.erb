<div class="col-sm-12">
  <h2><i class="fa fa-globe"></i> Domain settings</h2>
  <%= form_for @gallery_settings, url: gallery_settings_path() do |f| %>
    <%= render partial: 'shared/form/errors', locals: {f: f} %>
    <% collection =  Gallery.all.collect {  |g| [ g.name, g.id ] } %>
    <%= render partial: 'shared/form/select', locals: {name: :default_gallery_id, f: f, collection: collection} %>
    <%= render partial: 'shared/form/cancel_and_submit_buttons', locals: {f: f, cancel_path: galleries_path} %>
  <% end %>
</div>
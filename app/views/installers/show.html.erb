<div class="installer row">

	<div class="col-sm-12">
		<div class="col-sm-8 col-md-6">
			<h2> <%= content_tag(:i, "", class: "fa fa-plus") %> Installer</h2>
			<%= link_to content_tag(:i, "", class: "fa fa-arrow-left") + ' Back', control_panel_path, class: "btn btn-warning btn-lg trigger-response-modal" %>
		</div>
	
		<div class="col-sm-4 col-md-6">
			<%= render 'installer_actions' %>
		</div>
	</div>

</div>

<div class="installer row">
	<div class="col-sm-12">
		<div class="col-md-6 top-gap">
			<%= form_tag installer_path, method: 'get' do %>
			<div class="input-group input-group-lg">
				<div class="input-group-addon">
					<i class=" fa fa-search"></i>
				</div>
				<%= text_field_tag :search, params[:search], placeholder: "Search", class: 'form-control', autofocus: true %>
				<%= hidden_field_tag :gallery_id, @gallery.id %>
				<a href="<%= installer_path(gallery_id: @gallery.id) %>" class="input-group-addon btn search-clear-button">x</a>
			</div>
			<% end %>
		</div>
			
		<div class="col-md-6 top-gap clearfix">
			<div class="btn-group-lg dropdown pull-right">
				<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
					<%= content_tag(:i, '', class: 'fa fa-th-list') + ' ' + @gallery.name %> <span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu">
					<% if @other_galleries.present? %>
						<% @other_galleries.each do |gallery| %>
			        	<li>
							<%= link_to gallery.name, installer_path(gallery_id: gallery.id), class: 'btn-lg trigger-response-modal' %>
				        </li>
						<% end %>
			            <li class="divider"></li>
					<% end %>
		        	<li>
						<% link_body = (content_tag(:i, '', class: 'fa fa-th') + ' Manage galleries'.html_safe) %>
			  			<%= link_to link_body, galleries_path, class: 'btn-lg trigger-response-modal' %>
	        		</li>
	        	</ul>
	        </div>
		</div>
	
		<div class="col-sm-12">
			<div class="gallery_software_holder top-gap", data-galleryid="<%= @gallery.id %>", data-search="<%= params[:search] %>">
				<div class="text-center">
					<%= content_tag(:i, nil, class: "fa fa-spinner fa-spin text-center") + " Loading..."%>
				</div>
			</div>
		</div>

	</div>
</div>

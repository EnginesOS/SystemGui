<%= f.fields_for :resource do |ff| %>
	<%  required_memory = ff.object.required_memory
		hint = required_memory.present? ? "minimum is #{required_memory} megabytes" : 'megabytes' %>
	<div class="col-sm-12">
		<legend>Resources</legend>
	</div>
	<%= render partial: 'shared/form/text_field', locals: {name: :memory, tooltip: "How much memory should the system allocate to running this software.",
			hint: hint, f: ff} %>
	<%= ff.hidden_field :required_memory %>
<% end %>
